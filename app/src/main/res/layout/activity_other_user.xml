<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_other_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_0"
    android:paddingLeft="@dimen/activity_0"
    android:paddingRight="@dimen/activity_0"
    android:paddingTop="@dimen/activity_0"
    tools:context="com.example.jiaqi.filesmanagement.Others.OtherUser">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:text="档案借阅"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button_style1"
            android:id="@+id/NborrowSearch" />

        <Button
            android:text="已借情况"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button_style1"
            android:id="@+id/NborrowList" />

        <Button
            android:text="修改密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button_style1"
            android:id="@+id/Nchangepw" />

    </LinearLayout>

    <Button
        android:text="注销当前用户"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Nlogout"
        android:background="@color/red"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
